#:import dp kivy.metrics.dp

<TabletopRoot>:
    orientation: "vertical"
    padding: dp(20)
    spacing: dp(20)

    Label:
        text: root.status_text
        font_size: "24sp"
        halign: "center"
        valign: "middle"
        text_size: self.width, self.height

    BoxLayout:
        size_hint_y: None
        height: dp(60)
        spacing: dp(20)

        Button:
            text: "Start P1"
            on_release: root.start_p1()

        Button:
            text: "Start P2"
            on_release: root.start_p2()
